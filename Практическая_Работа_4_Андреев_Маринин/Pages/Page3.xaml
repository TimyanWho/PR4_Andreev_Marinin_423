<Page x:Class="Практическая_Работа_4_Андреев_Маринин.Pages.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:wfi="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
      xmlns:charts="clr-namespace:System.Windows.Forms.DataVisualization.Charting;assembly=System.Windows.Forms.DataVisualization"
      Title="Страница 3">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- IMAGE -->
        <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="1" Background="WhiteSmoke" Padding="6">
            <Image x:Name="ImgTop3" Width="375" Height="119" Stretch="Uniform" HorizontalAlignment="Left" VerticalAlignment="Center" IsHitTestVisible="False"/>
        </Border>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,8">
            <Label Content="x0:"/>
            <TextBox x:Name="TbX0" Width="80" Margin="4"/>
            <Label Content="xk:" Margin="8,0,0,0"/>
            <TextBox x:Name="TbXk" Width="80" Margin="4"/>
            <Label Content="dx:" Margin="8,0,0,0"/>
            <TextBox x:Name="TbDx" Width="80" Margin="4"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,0,0,8">
            <Label Content="a:"/>
            <TextBox x:Name="TbA" Width="80" Margin="4"/>
            <Label Content="b:" Margin="8,0,0,0"/>
            <TextBox x:Name="TbB" Width="80" Margin="4"/>
            <Label Content="c:" Margin="8,0,0,0"/>
            <TextBox x:Name="TbC" Width="80" Margin="4"/>
            <Button Content="Вычислить" Click="BtnCalc_Click" Margin="12,0,0,0"/>
            <Button Content="Очистить" Click="BtnClear_Click" Margin="8,0,0,0"/>
        </StackPanel>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="TbList" Grid.Column="0" Margin="4" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True" VerticalScrollBarVisibility="Auto"/>
            <wfi:WindowsFormsHost x:Name="WfhChart" Grid.Column="1" Margin="4"/>
        </Grid>
    </Grid>
</Page>
