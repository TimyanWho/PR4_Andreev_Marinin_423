<Page x:Class="Практическая_Работа_4_Андреев_Маринин.Pages.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Страница 1">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <!-- картинка -->
            <RowDefinition Height="Auto"/>
            <!-- вводы -->
            <RowDefinition Height="*"/>
            <!-- место для содержимого -->
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="1" Background="WhiteSmoke" Padding="6">
            <Image x:Name="ImgTop1" Width="220" Height="120" Stretch="Uniform" HorizontalAlignment="Left" VerticalAlignment="Center" IsHitTestVisible="False"/>
        </Border>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,8,0,8">
            <Label Content="x:" VerticalAlignment="Center"/>
            <TextBox x:Name="TbX" Width="80" Margin="4" ToolTip="Введите x"/>
            <Label Content="y:" VerticalAlignment="Center"/>
            <TextBox x:Name="TbY" Width="80" Margin="4" ToolTip="Введите y"/>
            <Label Content="z:" VerticalAlignment="Center"/>
            <TextBox x:Name="TbZ" Width="80" Margin="4" ToolTip="Введите z"/>
            <Button Content="Вычислить" Click="BtnCalc_Click" Margin="8,0,0,0" ToolTip="Вычислить значение t"/>
            <Button Content="Очистить" Click="BtnClear_Click" Margin="6,0,0,0" ToolTip="Очистить поля"/>
            <Label Content="Результат:" Margin="12,0,0,0" VerticalAlignment="Center"/>
            <TextBox x:Name="TbResult" Width="200" IsReadOnly="True" Margin="4" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>