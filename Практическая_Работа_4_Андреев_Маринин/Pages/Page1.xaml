<Page x:Class="Практическая_Работа_4_Андреев_Маринин.Pages.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:wfi="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
      xmlns:charts="clr-namespace:System.Windows.Forms.DataVisualization.Charting;assembly=System.Windows.Forms.DataVisualization"
      Title="Страница 1">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <!-- картинка вверху -->
            <RowDefinition Height="140"/>
            <!-- остальные элементы страницы -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- IMAGE (не редактируем пользователем) -->
        <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="1" Background="WhiteSmoke" Padding="6">
            <Image x:Name="ImgTop1" Width="351" Height="87" Stretch="Uniform" HorizontalAlignment="Left" VerticalAlignment="Center" IsHitTestVisible="False"/>
        </Border>

        <!-- Ввод x,y,z и вычисление одной точки -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,8,0,6">
            <Label Content="x:" VerticalAlignment="Center"/>
            <TextBox x:Name="TbX" Width="80" Margin="4"/>
            <Label Content="y:" VerticalAlignment="Center"/>
            <TextBox x:Name="TbY" Width="80" Margin="4"/>
            <Label Content="z:" VerticalAlignment="Center"/>
            <TextBox x:Name="TbZ" Width="80" Margin="4"/>
            <Button Content="Вычислить t" Click="BtnCalc_Click" Margin="8,0,0,0"/>
            <Button Content="Очистить" Click="BtnClear_Click" Margin="6,0,0,0"/>
            <Label Content="Результат:" Margin="12,0,0,0" VerticalAlignment="Center"/>
            <TextBox x:Name="TbResult" Width="160" IsReadOnly="True" Margin="4" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Параметры для графика t(x) -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,0,0,6">
            <Label Content="x от:" VerticalAlignment="Center"/>
            <TextBox x:Name="TbXFrom" Width="80" Margin="4" Text="-2"/>
            <Label Content="до:" VerticalAlignment="Center"/>
            <TextBox x:Name="TbXTo" Width="80" Margin="4" Text="2"/>
            <Label Content="шаг:" VerticalAlignment="Center"/>
            <TextBox x:Name="TbXStep" Width="80" Margin="4" Text="0.1"/>
            <Button Content="Построить t(x)" Click="BtnPlot_Click" Margin="8,0,0,0"/>
        </StackPanel>

        <!-- Листинг и график -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="TbList1" Grid.Column="0" Margin="4" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True" VerticalScrollBarVisibility="Auto"/>
            <wfi:WindowsFormsHost x:Name="WfhChart1" Grid.Column="1" Margin="4"/>
        </Grid>
    </Grid>
</Page>
