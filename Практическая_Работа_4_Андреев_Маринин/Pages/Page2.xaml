<Page x:Class="Практическая_Работа_4_Андреев_Маринин.Pages.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:wfi="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
      xmlns:charts="clr-namespace:System.Windows.Forms.DataVisualization.Charting;assembly=System.Windows.Forms.DataVisualization"
      Title="Страница 2">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <!-- картинка вверху -->
            <RowDefinition Height="140"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- IMAGE -->
        <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="1" Background="WhiteSmoke" Padding="6">
            <Image x:Name="ImgTop2" Width="414" Height="110" Stretch="Uniform" HorizontalAlignment="Left" VerticalAlignment="Center" IsHitTestVisible="False"/>
        </Border>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,8,0,6">
            <Label Content="x от:" VerticalAlignment="Center"/>
            <TextBox x:Name="TbFrom" Width="80" Margin="4" Text="-5"/>
            <Label Content="до:" VerticalAlignment="Center"/>
            <TextBox x:Name="TbTo" Width="80" Margin="4" Text="5"/>
            <Label Content="шаг:" VerticalAlignment="Center"/>
            <TextBox x:Name="TbStep" Width="80" Margin="4" Text="0.1"/>
            <Button Content="Построить" Click="BtnPlot_Click" Margin="8,0,0,0"/>
            <Button Content="Очистить" Click="BtnClear_Click" Margin="6,0,0,0"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,0,0,6">
            <Label Content="Функция:" VerticalAlignment="Center"/>
            <ComboBox x:Name="CmbFunc" Width="180" SelectionChanged="CmbFunc_SelectionChanged">
                <ComboBoxItem Tag="sinh" IsSelected="True">sh(x) = sinh(x)</ComboBoxItem>
                <ComboBoxItem Tag="square">x^2</ComboBoxItem>
                <ComboBoxItem Tag="exp">e^x</ComboBoxItem>
            </ComboBox>

            <TextBlock x:Name="TbFormula" Margin="12,2,0,0" VerticalAlignment="Center" Text="Формула: sh(x)"/>
        </StackPanel>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="TbList2" Grid.Column="0" Margin="4" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True" VerticalScrollBarVisibility="Auto"/>
            <wfi:WindowsFormsHost x:Name="WfhChart2" Grid.Column="1" Margin="4"/>
        </Grid>
    </Grid>
</Page>
