<Page x:Class="Практическая_Работа_4_Андреев_Маринин.Pages.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Страница 2">
    <StackPanel Margin="10">
        <StackPanel Orientation="Horizontal">
            <Label Content="x:" VerticalAlignment="Center"/>
            <TextBox x:Name="TbX" Width="150" ToolTip="Введите значение x"/>
        </StackPanel>

        <GroupBox Header="Выберите функцию" Margin="0,8,0,8">
            <StackPanel Orientation="Horizontal">
                <RadioButton x:Name="RbSinh" Content="sh(x)" IsChecked="True" Margin="6"/>
                <RadioButton x:Name="RbSquare" Content="x^2" Margin="6"/>
                <RadioButton x:Name="RbExp" Content="e^x" Margin="6"/>
            </StackPanel>
        </GroupBox>

        <StackPanel Orientation="Horizontal">
            <Button Content="Вычислить" Click="BtnCalc_Click"/>
            <Button Content="Очистить" Click="BtnClear_Click" Margin="8,0,0,0"/>
        </StackPanel>

        <Label Content="Результат:" Margin="0,10,0,0"/>
        <TextBox x:Name="TbResult" IsReadOnly="True" Height="30"/>
    </StackPanel>
</Page>
